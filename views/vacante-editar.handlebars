<main class="contenedor">
  <form action="/vacantes/editar/{{vacante.url}}" class="default-form" method="POST">
    <h2>Informacion General</h2>

    <div class="campo">
      <label>Titulo</label>
      <input type="text" name="titulo" placeholder="Ej: React Developer" value="{{vacante.titulo}}" required>
    </div>
    <div class="campo">
      <label>Empresa</label>
      <input type="text" name="empresa" placeholder="Empresa contrata" value="{{vacante.empresa}}" required>
    </div>
    <div class="campo">
      <label>Ubicacion</label>
      <input type="text" name="ubicacion" placeholder="Ej: Colombia o Remoto" value="{{vacante.ubicacion}}" required>
    </div>
    <div class="campo">
      <label>Salario (USD)</label>
      <input type="text" name="salario" placeholder="Ej: 500 USD "  value="{{vacante.salario}}" required>
    </div>
    <div class="campo">
      <label>Contrato</label>
      <select name="contrato">
        {{#contratoSeleccionado vacante.contrato}}
          <option value="" disabled selected>--- Selecciona ---</option>
          <option value="freelance">Freelance</option>
          <option value="completo">Tiempo Completo</option>
          <option value="medio">Medio Proyecto</option>
          <option value="porProyecto">Por Proyecto</option>
        {{/contratoSeleccionado}}
      </select>
    </div>

    <h3>Descripcion del Proyecto</h3>
    <div class="campo descripcion">
      <label>Descripción</label>
      <input type="hidden" id="x" name="descripcion"  value="{{{vacante.descripcion}}}">
      <trix-editor input="x"></trix-editor>
    </div>

    <h3>Conocimientos</h3>
    <ul class="lista-conocimientos">
      {{#seleccionarSkills vacante.skills}}
      {{/seleccionarSkills}}
    </ul>

    <div class="campo centrar-horizontal">
      <input type="hidden" id="skills" name="skills" />
      <input type="submit" value="Guardar Información" class="btn btn-azul">
    </div>
  </form>
</main>