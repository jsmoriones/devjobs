<main class="contenedor">
	<form method="POST" action="/editar-perfil" class="default-form" enctype="multipart/form-data">
		<div class="campo">
			<label>Nombre</label>
			<input type="text" name="nombre" placeholder="Tu Nombre" value={{usuario.nombre}}>
		</div>
		<div class="campo">
			<label>E-mail</label>
			<input type="email" name="email" placeholder="Tu E-mail" value={{usuario.email}}>
		</div>
		<div class="campo">
			<label>Password</label>
			<input type="password" name="password" placeholder="Tu Password">
		</div>
		<div class="campo">
			<label>Imagen</label>
			<input type="file" name="imagen">
			<img src="/uploads/perfiles/{{usuario.imagen}}" class="imagen-perfil">
		</div>
		<div class="campo">
			<input type="submit" value="Guardar Cambios" class="btn btn-azul">
		</div>
	</form>
</main>